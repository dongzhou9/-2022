void setup() {
  size(800, 800);
  background(255);
  smooth();
}

void draw() {
  if(mousePressed == true)
    {
      if(random(2)>1)
      {stroke(random(255),random(255),random(255));line(mouseX-random(200),mouseY,mouseX+random(200),mouseY);}
      else
      {stroke(random(255),random(255),random(255));line(mouseX,mouseY-random(200),mouseX,mouseY+random(200));}
  }  
  saveFrame();
}
